<div class="container">
  <div class="row">
    <div class="col-xs-12" cos-sn-6 col-sm-offset-3">

      <h1 class="text-center"> Ajouter un produit </h1>

      <%= simple_form_for @product do |f| %>
        <%= f.input :name, placeholder: "Test", label: "Quel nom?"%>
        <%= f.input :url, placeholder: "http://test.com", label: "Quelle url?"%>
        <%= f.button :submit, "Ajouter", class: "btn btn-primary" %>
      <% end %>

    </div>
   </div>
</div>
