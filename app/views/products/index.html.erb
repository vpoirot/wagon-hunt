<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="text-center">Liste des produits</h1>
        <ul>
          <% @products.each do |product| %>

          <div class="product">
            <div class='product-upvote'>
              <div class="product-arrow"></div>
              <div class='product-count'>0</div>
            </div>
            <img src="http://unsplash.it/300/200?random" alt="kudoz" class="product-image hidden-xs">
            <div class='product-body'>
              <h3> <%= product.name %></h3>
              <p><%=product.tagline %></p>
            </div>
            <ul class="list-inline product-controls hidden-sm hidden-xs">
              <li><%= link_to product_path(product) do %>
                <i class="fa fa-eye"></i>
              </li>
              <% end %>
              <li><%= link_to edit_product_path(product) do %>
                <i class="fa fa-pencil-alt"></i>
              </li>
              <% end %>
              <li><%= link_to product_path(product), method: :delete do %>
                <i class="fa fa-trash"></i>
              </li>
              <% end %>

            </ul>
          </div>
          <% end %>
        </ul>
    </div>
  </div>
</div>
